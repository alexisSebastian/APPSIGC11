<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.ejemplo.alexis_caballero.sigc11app.sigc11.Login">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.14">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/splashscreen"
            android:layout_marginLeft="21dp"
            android:id="@+id/imageView2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="73dp"
                android:inputType="textPersonName"
                android:hint="@string/edtUserLogin"
                android:ems="10"
                android:textAlignment="center"
                android:id="@+id/edtUserLogin" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="@string/edtPassLogin"
                android:textAlignment="center"
                android:id="@+id/edtPassLogin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:text="@string/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:id="@+id/btnLogin"
                android:layout_weight=".5"
                android:backgroundTint="#0D47A1"
                android:textColor="#fff"/>

            <Button
                android:text="@string/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:id="@+id/btnSignUp"
                android:layout_weight=".5"
                android:backgroundTint="#0D47A1"
                android:textColor="#fff"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
